<mah:MetroWindow
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:copyPlusPlus="clr-namespace:CopyPlusPlus" 
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    x:Class="CopyPlusPlus.MainWindow"
        mc:Ignorable="d"
        Title="Copy++ v3.0 本软件完全免费" Height="410" Width="425.067" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Closed="MainWindow_Closed" StateChanged="MainWindow_OnStateChanged" Closing="MainWindow_Closing" Topmost="True" mah:ValidationHelper.ShowValidationErrorOnMouseOver="True" mah:ValidationHelper.CloseOnMouseLeftButtonDown="True">
    <mah:MetroWindow.TitleTemplate>
        <DataTemplate>
            <TextBlock Text="{TemplateBinding Content}"
                       TextTrimming="CharacterEllipsis"
                       VerticalAlignment="Center"
                       Margin="8 -1 8 0"
                       FontWeight="Bold" FontFamily="Microsoft YaHei UI" FontSize="16"
                        />
        </DataTemplate>
    </mah:MetroWindow.TitleTemplate>

    <Grid VerticalAlignment="Bottom">
        <TextBlock x:Name="TextAbstract" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="60" Width="380" Padding="5,10,5,0" FontSize="14" LineHeight="24" FontStretch="Normal" ToolTip="关注公众号, 获取详细教程"><Run Text="复制文本后，软件会自动处理，只需打开相应功能，然后直接粘贴即可。" /><Run Text="祝君创作顺利，走向人生巅峰！" FontWeight="Bold" /></TextBlock>

        <Grid Margin="4,73,4,240" Background="#FFEBEBEB">
            <Grid Margin="5,0,303,37.5" ToolTip="复制文本后，直接粘贴到Word中即可生效" VerticalAlignment="Center">
                <mah:ToggleSwitch x:Name="Switch1" MinWidth="0" ContentDirection="LeftToRight" Content="合并换行" FontWeight="Bold" ContentPadding="0,0,-10,0" FontFamily="Microsoft YaHei UI" />
            </Grid>
            <Grid Margin="5,30,303,6.5" ToolTip="仅对中文有效" VerticalAlignment="Center">
                <mah:ToggleSwitch x:Name="Switch2" MinWidth="0" ContentDirection="LeftToRight" Content="去除空格" FontWeight="Bold" ContentPadding="0,0,-10,0" FontFamily="Microsoft YaHei UI" />
            </Grid>
            <Grid Margin="113,0,223,37.5" VerticalAlignment="Center">
                <mah:ToggleSwitch x:Name="Switch3" MinWidth="0" ContentDirection="LeftToRight" Content="翻译" FontWeight="Bold" ContentPadding="0,0,-10,0" FontFamily="Microsoft YaHei UI" />
            </Grid>
            <Grid Margin="193,-1,85,37.5" VerticalAlignment="Center">
                <mah:ToggleSwitch x:Name="Switch4" MinWidth="0" ContentDirection="LeftToRight" Content="翻译弹窗" FontWeight="Bold" ContentPadding="0,0,-10,0" FontFamily="Microsoft YaHei UI" />
            </Grid>
            <Grid Margin="113,31,156,5.5" VerticalAlignment="Center" Height="32">
                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold" FontSize="14">翻译引擎</TextBlock>
                <ComboBox x:Name="ComboBox" HorizontalAlignment="Right" VerticalAlignment="Center" >
                    <ComboBoxItem IsSelected="True">百度翻译</ComboBoxItem>
                    <ComboBoxItem>谷歌翻译</ComboBoxItem>
                    <ComboBoxItem>腾讯翻译</ComboBoxItem>
                </ComboBox>
            </Grid>
        </Grid>

        <Line X1="0" Y1="10" X2="450" Y2="10" Stroke="#FF3A4FEE" StrokeThickness="2" Margin="-16,156,-15.6,204" HorizontalAlignment="Center" />

        <Grid Margin="0,176,0,138">
            <TextBlock x:Name="TextBlockContact" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Left" Margin="11,5,0,0"><Run Text="遇到问题，或有建议，欢迎联系我" /></TextBlock>
            <TextBlock x:Name="TextBlockMail" HorizontalAlignment="Left" Margin="11,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Center"><Run Text="copyplusplus@163.com" /></TextBlock>
            <TextBlock x:Name="TextBlockGithub" HorizontalAlignment="Left" Margin="11,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Center"><Run Text="项目已开源，欢迎Star" /></TextBlock>
            <Button Margin="132,39,0,0" Click="Github_Click" Cursor="Hand" VerticalAlignment="Top" ToolTip="点我跳转到Github" HorizontalAlignment="Left" Height="22" Width="14">
                <Button.Template>
                    <ControlTemplate>
                        <!--<iconPacks:PackIconFeatherIcons Kind="Github" Background="Transparent" />-->
                        <Image Source="/image/GitHub.png" />
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Image Source="/image/wechatgzh.jpg" Margin="327,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Height="70" Width="70" ToolTip="您的关注,也是对我极大的支持" />
            <TextBlock x:Name="TextBlockGzh" HorizontalAlignment="Left" Margin="213,0,0,22" TextWrapping="Wrap" FontSize="10" TextAlignment="Center" Width="102" Height="25" VerticalAlignment="Bottom"><Run Text="欢迎关注我的公众号" /><LineBreak /><Run Language="zh-cn" Text="后续更新将会在此发布" /></TextBlock>
        </Grid>

        <Line X1="0" Y1="10" X2="450" Y2="10" Stroke="#FF3A4FEE" StrokeThickness="2" Margin="0,237,0,119" HorizontalAlignment="Center" />

        <Grid Margin="0,248,0,0">
            <TextBlock x:Name="TextBlockPay" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="164" Text="如果您觉得好用，欢迎捐助" TextAlignment="Center" FontWeight="Bold" ToolTip="感谢感谢感谢, 感谢您的支持!" Margin="128,2,127,0" />
            <Image Source="/image/Wechat.png" Margin="55,0,0,3.5" Width="100" Height="100" VerticalAlignment="Bottom" HorizontalAlignment="Left" ToolTip="欢迎使用微信支付" />
            <Image Source="/image/AliPay.png" Margin="0,0,57,3.5" Width="102" Height="102" VerticalAlignment="Bottom" HorizontalAlignment="Right" ToolTip="欢迎使用支付宝" />
            <Label x:Name="LabelWechat" Content="微 信 支 付" HorizontalAlignment="Left" Margin="71,0,0,97.5" VerticalAlignment="Bottom" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" />
            <Label x:Name="LabelAlipay" Content="支 付 宝" HorizontalAlignment="Left" Margin="284,0,0,97.5" VerticalAlignment="Bottom" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontWeight="Bold" />
        </Grid>
    </Grid>
    <!--<Window.InputBindings>
        <KeyBinding  
            Modifiers="Control"
                     Key="N"
                     Command="{copyPlusPlus:ShowWindowCommand}"/>
    </Window.InputBindings>
    <Window.DataContext>
        <copyPlusPlus:HotKeyCommand />
    </Window.DataContext>-->
</mah:MetroWindow>